generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  phone     String?
  address   String?  // Adres alanı
  role      String   @default("USER")
  createdAt DateTime @default(now())
  orders    Order[]  // Kullanıcının siparişleri
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal
  image       String?
  category    String
  createdAt   DateTime @default(now())
}

// --- YENİ EKLENEN SİPARİŞ TABLOLARI ---

model Order {
  id            String      @id @default(cuid())
  createdAt     DateTime    @default(now())
  status        String      @default("PENDING") // PENDING, PREPARING, ON_WAY, DELIVERED, CANCELLED
  total         Decimal
  paymentMethod String      @default("CASH") // CASH, CREDIT_CARD
  address       String
  note          String?
  
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  
  items         OrderItem[] // Siparişin içindeki ürünler
}

model OrderItem {
  id        String  @id @default(cuid())
  quantity  Int
  price     Decimal // O anki satış fiyatı
  name      String  // Ürün adı
  
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
}