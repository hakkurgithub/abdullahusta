generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// KULLANICI ROLLERİ (Yetkilendirme için)
enum Role {
  USER
  ADMIN
}

// KULLANICI TABLOSU
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String    // Şifreli saklanacak (bcrypt)
  phone         String?
  role          Role      @default(USER) // Varsayılan herkes Müşteridir
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  orders        Order[]
  reservations  Reservation[]
}

// MENÜ (ÜRÜNLER) TABLOSU
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal
  category    String   // Kebaplar, İçecekler vb.
  image       String?
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems  OrderItem[]
}

// SİPARİŞ TABLOSU
model Order {
  id          String      @id @default(cuid())
  userId      String?     // Üye ise ID, değilse boş
  user        User?       @relation(fields: [userId], references: [id])
  status      String      @default("PENDING") // PENDING, PREPARING, DELIVERED
  totalAmount Decimal
  address     String?
  note        String?
  createdAt   DateTime    @default(now())
  
  items       OrderItem[]
}

// SİPARİŞ DETAYI
model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal
}

// REZERVASYON TABLOSU
model Reservation {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  name      String
  email     String?
  phone     String
  date      DateTime
  guests    Int
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
}
